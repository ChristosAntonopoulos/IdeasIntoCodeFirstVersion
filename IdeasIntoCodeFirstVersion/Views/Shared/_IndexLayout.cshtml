

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")   
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar-expand-lg  mainnavbar">
        <div class="container-fluid">
            <button class="btn btn-dark d-inline-block d-lg-none ml-auto"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-align-justify"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <a class="navbar-brand mr-auto pt-3 " href="#">
                    <strong>Ideas into Coding</strong>
                </a>
                <div class="form-inline mr-auto my-2 my-lg-0 float-left pt-2">
                    <input class="form-control mr-sm-2"
                           type="search"
                           placeholder="Search..."
                           aria-label="Search"
                           name="searchString"
                           onChange={this.onChange} />
                    <button class="btn btn-outline-secondary my-2 my-sm-0"
                            type="submit"
                            onClick={this.search}>
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </div>
                <div>
                  
                    <div class='mt-2'>
                        <i class="fa fa-home" aria-hidden="true"></i>
                        <button class=' pr-3 pl-2 btnprof mr-3'>Home</button>
                        

                        <i class="fa fa-globe" aria-hidden="true"></i> <button class=' pr-3 pl-2 btnprof mr-3'>Notifications</button>
                    </div>                    
                  
                </div>
            </div>
        </div>
    </nav>
    <div class="row">



        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>






    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)
</body>
</html>

