    <script src="https://kit.fontawesome.com/7297f9c199.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/x-template" id="notifications-template">
        <ul class="notifications">
            <%
            _.each(notifications, function(notification) {
            if (notification.type == 1) { %>
            <li><%= notification.developer.user.fullName %> has followed you </li>
            <% }

            if (notification.type == 2) { %>
            <li><span class="highlight"><%= notification.developer.user.fullName %></span> has messaged you</li>
            <% }

            if (notification.type == 3) { %>
            <li><span class="highlight"><%= notification.developer.user.fullName %></span> has petittioned to join you project with name <%= notification.project.title %></li>
            <% }
            })
            %>
        </ul>
    </script>
    <script>

        $(document).ready(function () {

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            $.getJSON("/api/notifications", function (notifications) {
                if (notifications.length == 0)
                    console.log("No notifications")

                $(".js-notifications-count")
                    .text(notifications.length)
                    .removeClass("hide")
                    .addClass("animated bounceInDown");

                $(".notifications").popover({
                    html: true,
                    title: "Notifications",
                    content: function () {
                        var compiled = _.template($("#notifications-template").html());
                        var html = compiled({ notifications: notifications })

                        return html;
                    },
                    placement: "bottom"

                })
            });


            $.ajax({
                url: "/api/developers/",
                type: "GET",
                cache: false,
                success: function (result) {
                    $("#github").attr("href", result.gitHub);
                    $("#picture").attr("href", result.picture)
                }
            });



        });
    </script>




</body>
</html>




