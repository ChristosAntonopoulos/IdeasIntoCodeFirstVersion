<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top" id="main-nav">
        <div class="container">
            <a href="index.html" class="navbar-brand">IDEAS into CODING</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ml-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", "", new { @class = "nav-link" })</li>
                    <li class="nav-item">
                        <a href="#explore-head-section" class="nav-link">About Us</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>EIKONA</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="#">Profile</a>
                </li>
                <li>
                    <a href="#">Projects</a>
                </li>
                <li>
                    <a href="#">Message</a>
                </li>
                <li>
                    <a href="#">GitHub</a>
                </li>
                @*<li>
                    <a href="#">Settings</a>
                </li>
                <li>
                    <a href="#">Support</a>
                </li>
                <li>
                    <a href="#">Sign Out</a>
                </li>*@
            </ul>
        </nav>
        <div>
            @RenderBody()
        </div>
      </div>


       
        <hr />
        <footer id="main-footer">
            <div class="container">
                <div class="row">
                    <div class="col text-center py-4">
                        <h3>OtiNaNaiTeam</h3>
                        <p>
                            Copyright &copy;
                            <span id="year"></span>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
  


        @Scripts.Render("~/bundles/lib")
        @Scripts.Render("~/bundles/bootstrap")
        @Styles.Render("~/Content/css")
        @RenderSection("scripts", required: false)
</body>
</html>
